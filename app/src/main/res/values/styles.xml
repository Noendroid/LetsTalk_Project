<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="positive">
        <item name="android:textColor">#2E7D32</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="negative">
        <item name="android:textColor">#C62828</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="discussion_item_title">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#ECEFF1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="discussion_item_content">
        <item name="android:textColor">#78909C</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">#ECEFF1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="date_style">
        <item name="android:textColor">#78909C</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

</resources>
